<Window x:Class="DactyloTest.ScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DactyloTest"
        mc:Ignorable="d"
        Title="Scores - DactyloTest" Height="450" Width="1284" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" Background="#212F3D">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <StackPanel Margin="15">
                <StackPanel x:Name="Titles" Height="100">
                    <TextBlock FontFamily="Poppins" FontSize="40" Foreground="White" Canvas.Left="8" Canvas.Top="-102" Margin="15,0,0,0" FontWeight="Bold">Tableau des scores</TextBlock>
                </StackPanel>
                
                <Grid x:Name="scoreTable" Margin="0, 115, 0, 0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
    
