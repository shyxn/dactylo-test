<Window x:Class="DactyloTest.ScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DactyloTest"
        mc:Ignorable="d"
        Title="Scores - DactyloTest" Height="450" Width="1284" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Loaded="Window_Loaded" Background="#212F3D">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="15">
                <Canvas x:Name="Titles" Height="138">
                    <TextBlock FontFamily="Poppins" FontSize="40" Foreground="White" Margin="15,0,0,0" FontWeight="Bold">Tableau des scores</TextBlock>
                    <Button x:Name="OnlyMyScores" Click="FilterBtn_Click" Canvas.Left="131" Canvas.Top="79"  Style="{StaticResource RoundBasicBtn}" Width="128" Height="35">Mes scores</Button>
                    <Button x:Name="AllScores" Click="FilterBtn_Click" Width="92" Content="Tous" Canvas.Top="79" Canvas.Left="15" Height="35" Style="{StaticResource SelectedRoundBtn}"/>
                </Canvas>
                <Grid x:Name="scoreTable">
                    
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
    
